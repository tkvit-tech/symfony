{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
        {% for city in pagination.items %}
            <div class="row">
            <div class="col"><img src="/images/city/{{ city.image }}" class="rounded img-thumbnail" style="width: 150px; height: 100px"></div>
            <div class="col-9"><a href="{{ path('hotel', {'city': city.id}) }}">{{ city.name }}</a><br>{{ city.description }}</div>
            </div>
        {% endfor %}
    <div> {{ knp_pagination_render(pagination) }}</div>
{% endblock %}
